package com.matrimony.DTO;

import com.matrimony.Entity.User;
import com.matrimony.Entity.UserProfile;
import lombok.Data;

@Data
public class UserProfileResponse {
    private Long userId;
    private String firstName;
    private String lastName;
    private String email;
    private String phone;
    private String bio;
    private String hobbies;
    private String caste;
    private String motherTongue;
    private String education;
    private String profession;
    private String annualIncome;
    private String address;

    public UserProfileResponse(User user, UserProfile profile) {
        this.userId = user.getId();
        this.firstName = user.getFirstName();
        this.lastName = user.getLastName();
        this.email = user.getEmail();
        this.phone = user.getPhone();
        this.bio = profile.getBio();
        this.hobbies = profile.getHobbies();
        this.caste = profile.getCaste();
        this.motherTongue = profile.getMotherTongue();
        this.education = profile.getEducation();
        this.profession = profile.getProfession();
        this.annualIncome = profile.getAnnualIncome();
        this.address = profile.getAddress();
    }
}
